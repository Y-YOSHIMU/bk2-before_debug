<h1>Follower Users</h1>

<% @users.each do |user| %>
	<table class="table">
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
			<td><%= user.name %></td>
			<td>フォロー数：<%= user.followings.count %></td>
